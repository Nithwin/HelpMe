{
  "manifest_version": 3,
  "name": "Gemini Assistant",
  "version": "1.2.1",
  "description": "A quick-access assistant powered by the Gemini API",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://generativelanguage.googleapis.com/"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"],
      "css": ["assets/content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/content.css", "assets/reset-icon.svg"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle-and-focus": {
      "suggested_key": { "default": "Ctrl+Space", "mac": "Command+Space" },
      "description": "Show/Hide and focus the Gemini Assistant"
    },
    "reset-chat": {
      "suggested_key": { "default": "Alt+R", "mac": "Alt+R" },
      "description": "Reset the chat input"
    },
    "reset-position": {
      "suggested_key": { "default": "Alt+Shift+R", "mac": "Alt+Shift+R" },
      "description": "Reset window to default position"
    },
    "toggle-transparency": {
      "suggested_key": { "default": "Alt+Shift+T", "mac": "Alt+Shift+T" },
      "description": "Toggle window transparency"
    }
  },
  "action": {
    "default_icon": { "16": "icon.png", "48": "icon.png", "128": "icon.png" }
  }
}
